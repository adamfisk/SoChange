<% bodyid "missions" %>

<div class="page">
	<div class="column span-3 ui-corner-all mission-left-column">
		<div style="padding: 5px;">
		<div style="align: center; margin-bottom: 25px;">
			<img src="/images/logo.jpg" alt="Logo", style="display: inline-block; width: auto; height: 100px; align: center;" class="clear"></img>
		</div>
		<div class="ui-widget toolbox">
			
				<%= @mission.short_description %>
		
		</div>

		<div class="ui-widget toolbox">
			<div class="ui-widget-header ui-corner-top">
				<h3>Mission Performance</h3>
			</div>
			<div class="ui-widget-content ui-corner-bottom">
				Graphs go here
			</div>
		</div>
		</div>
		
	</div>
	<div class="column span-7">
		<div class="page-content">
			<h1><%=h @mission.name %></h1>
			<div id="tabs">

				<ul>
					<li><a href="#tab-updates">Updates</a></li>
					<li><a href="#tab-info">Info</a></li>
				</ul>

				<div id="tab-updates">
					<div class="addcomment">
						<input type="text"></input>
						<a href="#" class="ui-state-default ui-corner-all ui-priority-primary">Add Update</a>
					</div>
					<table cellpadding="10" cellspacing="10" class="newsfeed">
						<tr>
							<td><img src="/images/1.jpg" style="width: 60px;" class="ui-corner-all"></img></td>
							<td>
								<table cellpadding="0" cellspacing="0">
									<tr>
										<td class="newsfeed-personname">Adam Fisk </td>
									</tr>
									<tr>
										<td class="newsfeed-postdate">
											24 minutes ago | April 15, 2010 | 3:00pm
										</td>
									</tr>
									<tr><td colspan="2" class="newsfeed-post">We just hit our $5,000 goal for local Cambridge businesses!</td></tr>
								</table>
							</td>
						</tr>
						<tr class="even-row">
							<td class="even-row-cell"><img src="/images/2.jpg" style="width: 60px;" class="ui-corner-all"></img></td>
							<td class="even-row-cell">
								<table cellpadding="0" cellspacing="0">
									<tr>
										<td class="newsfeed-personname">Mike Normal</td>

									</tr>
									<tr>
										<td class="newsfeed-postdate">
											1 day ago | April 14, 2010 | 1:34pm
										</td>
									</tr>
									<tr><td colspan="2" class="newsfeed-post">We just hit our goals as well!</td></tr>
								</table>
							</td>
						</tr>
					</table>
				</div>
				<div id="tab-info">
					<fieldset>
						<legend>Description</legend>
						<div>
							<%= h @mission.long_description %>
						</div>
					</fieldset>
					<fieldset>
						<legend>Videos</legend>
						<div>
							<object width="300" height="200"><param name="movie" value="http://www.youtube.com/v/A82ik50_3uc&hl=en_US&fs=1&"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="http://www.youtube.com/v/A82ik50_3uc&hl=en_US&fs=1&" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" width="300" height="200"></embed></object>
						</div>
					</fieldset>
					
				</div>
			</div>
		</div>
		
	</div>
</div>




<script>
if($) {
	$(document).ready(function(){
		$('#tabs').tabs();
	});
}
</script>